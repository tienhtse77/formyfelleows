---
layout: base.njk
---

<div class="page">
    {% if title %}
    <header class="page-header">
        <h1 class="page-title">{{ title }}</h1>
        {% if description %}
        <p class="page-description">{{ description }}</p>
        {% endif %}
    </header>
    {% endif %}

    <div class="page-content">
        {{ content | safe }}
    </div>
</div>